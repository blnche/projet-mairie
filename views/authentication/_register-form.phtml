<form method="post" action="/authentification/enregistrer-nouveau-compte">
    <fieldset>
        <label for="firstName">Prénom :</label>
        <input type="text" name="firstName" id="firstName" required>
    </fieldset>
    <fieldset>
        <label for="lastName">Nom de famille :</label>
        <input type="text" name="lastName" id="lastName" required>
    </fieldset>
    <fieldset>
        <label for="email">Adresse mail :</label>
        <input type="email" name="email" id="email" required>
    </fieldset>
    <fieldset>
        <label for="password">Mot de passe :</label>
        <input type="password" name="password" id="password" required>
    </fieldset>
    <fieldset>
        <label for="confirmPassword">Confirmer le Mot de passe :</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required>
    </fieldset>
    <fieldset>
        <label for="address">Adresse postal :</label>
        <input type="text" name="address" id="address">
    </fieldset>
    <fieldset>
        <label for="code-postal">Code postal :</label>
        <input type="text" name="code-postal" id="code-postal" required>
    </fieldset>
    <fieldset>
        <label for="ville">Ville/Commune :</label>
        <input type="text" name="ville" id="ville" required>
    </fieldset>
    <input type="submit" name="register" value="Créer son compte"/>
</form>